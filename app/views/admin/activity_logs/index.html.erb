<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">활동 로그</h1>
  </div>

  <!-- 필터 -->
  <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
    <%= form_with url: admin_activity_logs_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">사용자</label>
        <%= select_tag :user_id,
            options_from_collection_for_select(@users, :id, :name, params[:user_id]),
            include_blank: "전체",
            class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">액션</label>
        <%= select_tag :action_type,
            options_for_select([["전체", ""], ["생성", "create"], ["수정", "update"], ["삭제", "destroy"]], params[:action_type]),
            class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">대상</label>
        <%= select_tag :target_type,
            options_for_select([["전체", ""]] + @target_types.map { |k, v| [v, k] }, params[:target_type]),
            class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">날짜</label>
        <%= date_field_tag :date, params[:date],
            class: "rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= submit_tag "검색", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 cursor-pointer" %>
        <%= link_to "초기화", admin_activity_logs_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
      </div>
    <% end %>
  </div>

  <!-- 로그 목록 -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">시간</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">사용자</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">액션</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">대상</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">상세</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IP</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @activity_logs.each do |log| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= log.performed_at.strftime("%Y-%m-%d %H:%M") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                  <span class="text-blue-600 font-medium text-sm">
                    <%= log.user.name&.first || log.user.email.first.upcase %>
                  </span>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-900"><%= log.user.name || log.user.email %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case log.action %>
              <% when "create" %>
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  생성
                </span>
              <% when "update" %>
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                  수정
                </span>
              <% when "destroy" %>
                <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  삭제
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= log.target_type_name %></div>
              <div class="text-sm text-gray-500"><%= truncate(log.target_name, length: 30) %></div>
            </td>
            <td class="px-6 py-4 text-sm text-gray-500">
              <% if log.details.present? %>
                <button type="button"
                        class="text-blue-600 hover:text-blue-800"
                        onclick="alert('<%= j log.details %>')">
                  상세보기
                </button>
              <% else %>
                -
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= log.ip_address || "-" %>
            </td>
          </tr>
        <% end %>

        <% if @activity_logs.empty? %>
          <tr>
            <td colspan="6" class="px-6 py-12 text-center text-gray-500">
              활동 로그가 없습니다.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- 페이지네이션 -->
  <% if @total_pages > 1 %>
    <div class="mt-4 flex justify-center items-center gap-2">
      <% if @page > 1 %>
        <%= link_to "이전", admin_activity_logs_path(page: @page - 1, user_id: params[:user_id], action_type: params[:action_type], target_type: params[:target_type], date: params[:date]), class: "px-3 py-1 bg-gray-200 rounded hover:bg-gray-300" %>
      <% end %>

      <span class="text-gray-600">
        <%= @page %> / <%= @total_pages %> 페이지 (총 <%= @total_count %>건)
      </span>

      <% if @page < @total_pages %>
        <%= link_to "다음", admin_activity_logs_path(page: @page + 1, user_id: params[:user_id], action_type: params[:action_type], target_type: params[:target_type], date: params[:date]), class: "px-3 py-1 bg-gray-200 rounded hover:bg-gray-300" %>
      <% end %>
    </div>
  <% end %>
</div>
