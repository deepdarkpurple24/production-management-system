<%= render 'equipment/shared/sub_navigation' %>

<div class="container mt-4">
  <!-- 헤더 섹션 -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="mb-1" style="font-weight: 600; letter-spacing: -0.02em;">장비목록</h2>
      <p class="text-muted small mb-0">Equipment Management</p>
    </div>
    <%= link_to new_equipment_path, class: "btn-apple btn-apple-primary" do %>
      <i class="bi bi-plus-lg me-2"></i>새 장비 등록
    <% end %>
  </div>

  <!-- 장비 목록 -->
  <div class="card-apple">
    <div class="card-body p-0">
      <% if @equipments.any? %>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead style="background-color: #f5f5f7; border-bottom: 1px solid #d2d2d7;">
              <tr>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">장비명</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">장비구분</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">제조사</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">모델번호</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">상태</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">위치</th>
                <th class="py-3 px-4 text-center" style="font-weight: 500; font-size: 0.875rem;">관리</th>
              </tr>
            </thead>
            <tbody>
              <% @equipments.each do |equipment| %>
                <tr style="border-bottom: 1px solid #e8e8ed;">
                  <td class="py-3 px-4" style="font-weight: 500;">
                    <%= equipment.name %>
                  </td>
                  <td class="py-3 px-4">
                    <% if equipment.equipment_type.present? %>
                      <%= equipment.equipment_type.name %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4">
                    <% if equipment.manufacturer.present? %>
                      <%= equipment.manufacturer %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4">
                    <% if equipment.model_number.present? %>
                      <%= equipment.model_number %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4">
                    <% if equipment.status.present? %>
                      <span class="badge bg-<%= equipment.status == '정상' ? 'success' : equipment.status == '점검중' ? 'warning' : equipment.status == '고장' ? 'danger' : 'secondary' %>">
                        <%= equipment.status %>
                      </span>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4">
                    <% if equipment.location.present? %>
                      <%= equipment.location %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4 text-center">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to equipment_path(equipment), class: "btn btn-sm btn-outline-secondary", title: "상세" do %>
                        <i class="bi bi-eye"></i>
                      <% end %>
                      <%= link_to edit_equipment_path(equipment), class: "btn btn-sm btn-outline-primary", title: "수정" do %>
                        <i class="bi bi-pencil"></i>
                      <% end %>
                      <%= button_to equipment_path(equipment), method: :delete, data: { turbo_confirm: "정말 삭제하시겠습니까?" }, class: "btn btn-sm btn-outline-danger", title: "삭제" do %>
                        <i class="bi bi-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-gear" style="font-size: 3rem; color: #d2d2d7;"></i>
          <p class="mt-3 text-muted">등록된 장비가 없습니다.</p>
          <%= link_to new_equipment_path, class: "btn-apple btn-apple-outline mt-2" do %>
            <i class="bi bi-plus-lg me-2"></i>첫 장비 등록하기
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
