<%= render 'recipes/shared/sub_navigation' %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h4 class="mb-0" style="font-weight: 600; letter-spacing: -0.02em;">완제품 관리</h4>
      <p class="text-muted small mb-0">Finished Product Management</p>
    </div>
    <%= link_to new_finished_product_path, class: "btn-modern btn-modern-primary" do %>
      <i class="bi bi-plus-lg me-2"></i>완제품 등록
    <% end %>
  </div>

  <!-- 완제품 목록 -->
  <div class="card-modern">
    <div class="card-body p-0">
      <% if @finished_products.any? %>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead style="background-color: #f5f5f7; border-bottom: 1px solid #d2d2d7;">
              <tr>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">완제품명</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">중량</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">레시피 수</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">등록일</th>
                <th class="py-3 px-4 text-center" style="font-weight: 500; font-size: 0.875rem;">관리</th>
              </tr>
            </thead>
            <tbody>
              <% @finished_products.each do |finished_product| %>
                <tr style="border-bottom: 1px solid #e8e8ed;">
                  <td class="py-3 px-4" style="font-weight: 500;">
                    <%= finished_product.name %>
                  </td>
                  <td class="py-3 px-4">
                    <% if finished_product.weight.present? %>
                      <%= number_with_delimiter(finished_product.weight) %><%= finished_product.weight_unit %>
                    <% else %>
                      <span class="text-muted">-</span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4">
                    <%= finished_product.finished_product_recipes.count %>개
                  </td>
                  <td class="py-3 px-4">
                    <%= finished_product.created_at.strftime("%Y-%m-%d") %>
                  </td>
                  <td class="py-3 px-4 text-center">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to finished_product_path(finished_product), class: "btn btn-sm btn-outline-secondary", title: "상세" do %>
                        <i class="bi bi-eye"></i>
                      <% end %>
                      <%= link_to edit_finished_product_path(finished_product), class: "btn btn-sm btn-outline-primary", title: "수정" do %>
                        <i class="bi bi-pencil"></i>
                      <% end %>
                      <%= button_to finished_product_path(finished_product), method: :delete, data: { turbo_confirm: "정말 삭제하시겠습니까?" }, class: "btn btn-sm btn-outline-danger", title: "삭제" do %>
                        <i class="bi bi-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-box-seam" style="font-size: 3rem; color: #d2d2d7;"></i>
          <p class="mt-3 text-muted">등록된 완제품이 없습니다.</p>
          <%= link_to new_finished_product_path, class: "btn-modern btn-modern-outline mt-2" do %>
            <i class="bi bi-plus-lg me-2"></i>완제품 등록
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
