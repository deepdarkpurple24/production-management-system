<%= render 'recipes/shared/sub_navigation' %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="mb-1" style="font-weight: 600; letter-spacing: -0.02em;">완제품 관리</h2>
      <p class="text-muted small mb-0">Finished Product Management</p>
    </div>
    <%= link_to new_finished_product_path, class: "btn-apple btn-apple-primary" do %>
      <i class="bi bi-plus-lg me-2"></i>새 완제품 등록
    <% end %>
  </div>

  <% if @finished_products.exists? %>
    <div class="card-apple">
      <table class="table">
        <thead>
          <tr>
            <th>완제품명</th>
            <th class="text-center">중량</th>
            <th class="text-center">레시피 수</th>
            <th class="text-center">등록일</th>
            <th class="text-center">관리</th>
          </tr>
        </thead>
        <tbody>
          <% @finished_products.each do |finished_product| %>
            <tr>
              <td>
                <%= link_to finished_product.name, finished_product_path(finished_product), class: "text-decoration-none" %>
              </td>
              <td class="text-center">
                <% if finished_product.weight.present? %>
                  <%= finished_product.weight %> <%= finished_product.weight_unit %>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td class="text-center">
                <%= finished_product.finished_product_recipes.count %>개
              </td>
              <td class="text-center">
                <%= finished_product.created_at.strftime("%Y-%m-%d") %>
              </td>
              <td class="text-center">
                <div class="btn-group btn-group-sm">
                  <%= link_to "수정", edit_finished_product_path(finished_product), class: "btn btn-sm btn-outline-primary" %>
                  <%= button_to "삭제", finished_product_path(finished_product), method: :delete,
                      data: { turbo_confirm: "정말 삭제하시겠습니까?" },
                      class: "btn btn-sm btn-outline-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="empty-state-icon">
        <i class="bi bi-box-seam"></i>
      </div>
      <h3>등록된 완제품이 없습니다</h3>
      <p class="text-muted mb-4">레시피를 조합하여 완제품을 등록하세요</p>
      <%= link_to "첫 완제품 등록하기", new_finished_product_path, class: "btn-apple btn-apple-primary" %>
    </div>
  <% end %>
</div>
