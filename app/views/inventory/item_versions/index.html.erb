<%= render 'inventory/shared/sub_navigation' %>

<div class="container mt-4">
  <!-- 헤더 섹션 -->
  <div class="mb-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "품목 관리", inventory_items_path %></li>
        <li class="breadcrumb-item"><%= link_to @item.name, inventory_item_path(@item) %></li>
        <li class="breadcrumb-item active" aria-current="page">수정내역</li>
      </ol>
    </nav>
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h4 class="mb-0" style="font-weight: 600; letter-spacing: -0.02em;"><%= @item.name %> - 수정내역</h4>
        <p class="text-muted small mb-0">Item Version History</p>
      </div>
      <%= link_to inventory_items_path, class: "btn-modern btn-modern-outline" do %>
        <i class="bi bi-arrow-left me-2"></i>목록으로 돌아가기
      <% end %>
    </div>
  </div>

  <!-- 수정내역 목록 -->
  <div class="card-modern">
    <div class="card-body p-0">
      <% if @versions.any? %>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead style="background-color: #f5f5f7; border-bottom: 1px solid #d2d2d7;">
              <tr>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">버전</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">품목명</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">품목코드</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">카테고리</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">수정일시</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">변경사항</th>
                <th class="py-3 px-4 text-center" style="font-weight: 500; font-size: 0.875rem;">삭제</th>
              </tr>
            </thead>
            <tbody>
              <!-- 현재 버전 표시 -->
              <tr style="background-color: #f0f9ff; border-bottom: 1px solid #e8e8ed;">
                <td class="py-3 px-4">
                  <span class="badge bg-primary">현재</span>
                </td>
                <td class="py-3 px-4" style="font-weight: 500;"><%= @item.name %></td>
                <td class="py-3 px-4"><%= @item.item_code %></td>
                <td class="py-3 px-4"><%= @item.category %></td>
                <td class="py-3 px-4"><%= @item.updated_at.strftime("%Y년 %m월 %d일 %H:%M") %></td>
                <td class="py-3 px-4 text-muted">-</td>
                <td class="py-3 px-4 text-center">-</td>
              </tr>

              <!-- 이전 버전들 -->
              <% @versions.each do |version| %>
                <tr style="border-bottom: 1px solid #e8e8ed;" class="version-row" data-version="<%= version.version_number %>">
                  <td class="py-3 px-4">
                    <span class="badge bg-secondary">v<%= version.version_number %></span>
                  </td>
                  <td class="py-3 px-4"><%= version.name %></td>
                  <td class="py-3 px-4"><%= version.item_code %></td>
                  <td class="py-3 px-4"><%= version.category %></td>
                  <td class="py-3 px-4"><%= version.changed_at.strftime("%Y년 %m월 %d일 %H:%M") %></td>
                  <td class="py-3 px-4">
                    <% if version.change_summary.present? %>
                      <span class="text-info"><i class="bi bi-info-circle me-1"></i><%= version.change_summary %></span>
                    <% else %>
                      <span class="text-muted">변경사항 없음</span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4 text-center">
                    <%= button_to inventory_item_item_version_path(@item, version),
                                  method: :delete,
                                  class: "btn btn-sm btn-outline-danger",
                                  data: { turbo_confirm: "이 수정내역을 삭제하시겠습니까?" },
                                  title: "삭제" do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </td>
                </tr>
                <!-- 상세 정보 (토글 가능) -->
                <tr class="version-detail" id="detail-<%= version.version_number %>" style="display: none; background-color: #fafafa;">
                  <td colspan="7" class="p-4">
                    <%
                      # 다음 버전 (비교 대상) 찾기
                      next_version_index = @versions.index(version) - 1
                      next_version = next_version_index >= 0 ? @versions[next_version_index] : nil
                      is_first_version = version == @versions.first

                      # 재고량 비교
                      if is_first_version
                        compared_minimum_stock = @item.minimum_stock.to_f
                        compared_optimal_stock = @item.optimal_stock.to_f
                        compared_weight = @item.weight.to_f
                        compared_weight_unit = @item.weight_unit
                      elsif next_version
                        compared_minimum_stock = next_version.minimum_stock.to_f
                        compared_optimal_stock = next_version.optimal_stock.to_f
                        compared_weight = next_version.weight.to_f
                        compared_weight_unit = next_version.weight_unit_data
                      else
                        compared_minimum_stock = nil
                        compared_optimal_stock = nil
                        compared_weight = nil
                        compared_weight_unit = nil
                      end

                      current_minimum_stock = version.minimum_stock.to_f
                      current_optimal_stock = version.optimal_stock.to_f
                      current_weight = version.weight.to_f
                      current_weight_unit = version.weight_unit_data

                      minimum_stock_changed = (is_first_version || next_version) && (current_minimum_stock != compared_minimum_stock)
                      optimal_stock_changed = (is_first_version || next_version) && (current_optimal_stock != compared_optimal_stock)
                      weight_changed = (is_first_version || next_version) && (current_weight != compared_weight || current_weight_unit != compared_weight_unit)

                      # 공급업체 비교
                      if is_first_version
                        compared_suppliers = @item.suppliers || []
                      elsif next_version
                        compared_suppliers = next_version.suppliers_data || []
                      else
                        compared_suppliers = []
                      end

                      current_suppliers = version.suppliers_data || []
                      suppliers_changed = (is_first_version || next_version) && (current_suppliers.sort != compared_suppliers.sort)

                      # 비고 비교
                      if is_first_version
                        compared_notes = @item.notes
                      elsif next_version
                        compared_notes = next_version.notes
                      else
                        compared_notes = nil
                      end

                      current_notes = version.notes
                      notes_changed = (is_first_version || next_version) && (current_notes.to_s != compared_notes.to_s)
                    %>

                    <div class="row">
                      <!-- 기본 정보 -->
                      <div class="col-md-6 mb-3">
                        <h6 class="mb-2" style="font-weight: 600;"><i class="bi bi-info-circle me-2"></i>기본 정보</h6>
                        <table class="table table-sm table-bordered">
                          <tbody>
                            <tr>
                              <th style="width: 30%;">품목명</th>
                              <td><%= version.name %></td>
                            </tr>
                            <tr>
                              <th>품목코드</th>
                              <td><%= version.item_code %></td>
                            </tr>
                            <tr>
                              <th>카테고리</th>
                              <td><%= version.category %></td>
                            </tr>
                            <tr>
                              <th>보관 위치</th>
                              <td><%= version.storage_location %></td>
                            </tr>
                            <tr>
                              <th>재고 단위</th>
                              <td><%= version.stock_unit %></td>
                            </tr>
                            <tr>
                              <th>바코드</th>
                              <td><%= version.barcode %></td>
                            </tr>
                          </tbody>
                        </table>
                      </div>

                      <!-- 재고 정보 -->
                      <div class="col-md-6 mb-3">
                        <h6 class="mb-2" style="font-weight: 600;"><i class="bi bi-box-seam me-2"></i>재고 정보</h6>
                        <table class="table table-sm table-bordered">
                          <tbody>
                            <tr <%= 'style="background-color: #fff3cd;"'.html_safe if minimum_stock_changed %>>
                              <th style="width: 40%;">최소재고량</th>
                              <td>
                                <% if version.minimum_stock.present? %>
                                  <%= number_with_delimiter(version.minimum_stock) %> <%= version.stock_unit %>
                                <% else %>
                                  -
                                <% end %>
                                <% if minimum_stock_changed %>
                                  <br>
                                  <small class="text-warning">
                                    <i class="bi bi-arrow-right me-1"></i>
                                    <%= number_with_delimiter(current_minimum_stock) %> → <%= number_with_delimiter(compared_minimum_stock) %>
                                  </small>
                                <% end %>
                              </td>
                            </tr>
                            <tr <%= 'style="background-color: #fff3cd;"'.html_safe if optimal_stock_changed %>>
                              <th>적정재고량</th>
                              <td>
                                <% if version.optimal_stock.present? %>
                                  <%= number_with_delimiter(version.optimal_stock) %> <%= version.stock_unit %>
                                <% else %>
                                  -
                                <% end %>
                                <% if optimal_stock_changed %>
                                  <br>
                                  <small class="text-warning">
                                    <i class="bi bi-arrow-right me-1"></i>
                                    <%= number_with_delimiter(current_optimal_stock) %> → <%= number_with_delimiter(compared_optimal_stock) %>
                                  </small>
                                <% end %>
                              </td>
                            </tr>
                            <tr <%= 'style="background-color: #fff3cd;"'.html_safe if weight_changed %>>
                              <th>중량</th>
                              <td>
                                <% if version.weight.present? %>
                                  <%= number_with_delimiter(version.weight) %> <%= version.weight_unit_data || 'g' %>
                                <% else %>
                                  -
                                <% end %>
                                <% if weight_changed %>
                                  <br>
                                  <small class="text-warning">
                                    <i class="bi bi-arrow-right me-1"></i>
                                    <%= number_with_delimiter(current_weight) %> <%= current_weight_unit %> → <%= number_with_delimiter(compared_weight) %> <%= compared_weight_unit %>
                                  </small>
                                <% end %>
                              </td>
                            </tr>
                          </tbody>
                        </table>
                      </div>

                      <!-- 비고 -->
                      <div class="col-12 mb-3">
                        <h6 class="mb-2" style="font-weight: 600;"><i class="bi bi-file-text me-2"></i>비고</h6>
                        <div <%= 'style="background-color: #fff3cd; padding: 1rem; border-radius: 8px;"'.html_safe if notes_changed %>>
                          <% if version.notes.present? %>
                            <%= simple_format(version.notes) %>
                          <% else %>
                            <span class="text-muted">-</span>
                          <% end %>
                          <% if notes_changed %>
                            <br>
                            <small class="text-warning">
                              <i class="bi bi-arrow-right me-1"></i>
                              변경됨: "<%= (current_notes || "없음").truncate(30) %>" → "<%= (compared_notes || "없음").truncate(30) %>"
                            </small>
                          <% end %>
                        </div>
                      </div>

                      <!-- 공급업체 -->
                      <div class="col-12">
                        <h6 class="mb-2" style="font-weight: 600;"><i class="bi bi-building me-2"></i>공급업체</h6>
                        <% if version.suppliers_data.any? %>
                          <div class="d-flex flex-wrap gap-2">
                            <% version.suppliers_data.each do |supplier| %>
                              <%
                                is_new_supplier = (is_first_version || next_version) && !compared_suppliers.include?(supplier)
                              %>
                              <span class="badge <%= is_new_supplier ? 'bg-info' : 'bg-secondary' %>">
                                <%= supplier %>
                                <% if is_new_supplier %>
                                  <i class="bi bi-plus-circle ms-1"></i>
                                <% end %>
                              </span>
                            <% end %>
                          </div>
                          <% if suppliers_changed %>
                            <%
                              deleted_suppliers = compared_suppliers - current_suppliers
                            %>
                            <% if deleted_suppliers.any? %>
                              <div class="mt-2 d-flex flex-wrap gap-2">
                                <% deleted_suppliers.each do |supplier| %>
                                  <span class="badge bg-danger text-decoration-line-through" style="opacity: 0.7;">
                                    <%= supplier %>
                                    <i class="bi bi-dash-circle ms-1"></i>
                                  </span>
                                <% end %>
                              </div>
                            <% end %>
                          <% end %>
                        <% else %>
                          <p class="text-muted mb-0">등록된 공급업체가 없습니다.</p>
                        <% end %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-clock-history" style="font-size: 3rem; color: #d2d2d7;"></i>
          <p class="mt-3 text-muted">아직 수정 내역이 없습니다.</p>
          <p class="text-muted small">품목을 수정하면 자동으로 변경 내역이 기록됩니다.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .version-row {
    cursor: pointer;
    transition: background-color 0.2s;
  }
  .version-row:hover {
    background-color: #f5f5f7;
  }
</style>

<script>
function initializeVersionToggle() {
  const versionRows = document.querySelectorAll('.version-row');

  versionRows.forEach(row => {
    const oldListener = row._versionClickListener;
    if (oldListener) {
      row.removeEventListener('click', oldListener);
    }

    const newListener = function(e) {
      if (e.target.closest('form') || e.target.closest('button')) {
        return;
      }

      const version = this.dataset.version;
      const detailRow = document.getElementById('detail-' + version);

      if (!detailRow) {
        console.error('Detail row not found for version:', version);
        return;
      }

      if (detailRow.style.display === '' || detailRow.style.display === 'none') {
        detailRow.style.display = 'table-row';
      } else {
        detailRow.style.display = 'none';
      }
    };

    row._versionClickListener = newListener;
    row.addEventListener('click', newListener);
  });
}

document.addEventListener('DOMContentLoaded', initializeVersionToggle);
document.addEventListener('turbo:load', initializeVersionToggle);
document.addEventListener('turbo:render', initializeVersionToggle);
</script>
