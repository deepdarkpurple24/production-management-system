<%= render 'inventory/shared/sub_navigation' %>

<div class="container mt-4">
  <!-- 헤더 섹션 -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h4 class="mb-0" style="font-weight: 600; letter-spacing: -0.02em;">품목관리</h4>
      <p class="text-muted small mb-0">Item Management</p>
    </div>
    <%= link_to new_inventory_item_path, class: "btn-modern btn-modern-primary" do %>
      <i class="bi bi-plus-lg me-2"></i>품목 등록
    <% end %>
  </div>

  <!-- 검색 필터 -->
  <% if @items.any? %>
    <%= render 'inventory/shared/table_filter', placeholder: "품목명, 품목코드, 카테고리로 검색..." %>
  <% end %>

  <!-- 품목 목록 테이블 -->
  <div class="card-modern">
    <div class="card-body p-0">
      <% if @items.any? %>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead style="background-color: #f5f5f7; border-bottom: 1px solid #d2d2d7;">
              <tr>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">품목코드</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">품목명</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">카테고리</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">개당 중량</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">최소재고</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">적정재고</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">보관위치</th>
                <th class="py-3 px-4 text-center" style="font-weight: 500; font-size: 0.875rem;">관리</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
                <tr style="border-bottom: 1px solid #e8e8ed;">
                  <td class="py-3 px-4">
                    <code style="background-color: #f5f5f7; padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.813rem;"><%= item.item_code %></code>
                  </td>
                  <td class="py-3 px-4" style="font-weight: 500;"><%= item.name %></td>
                  <td class="py-3 px-4"><%= item.category %></td>
                  <td class="py-3 px-4">
                    <% if item.weight.present? %>
                      <%= item.weight %> <%= item.weight_unit %>
                    <% else %>
                      -
                    <% end %>
                  </td>
                  <td class="py-3 px-4"><%= item.minimum_stock %></td>
                  <td class="py-3 px-4"><%= item.optimal_stock %></td>
                  <td class="py-3 px-4"><%= item.storage_location %></td>
                  <td class="py-3 px-4 text-center">
                    <div class="btn-group btn-group-sm" role="group">
                      <%= link_to inventory_item_path(item), class: "btn btn-sm btn-outline-secondary", title: "상세" do %>
                        <i class="bi bi-eye"></i>
                      <% end %>
                      <%= link_to edit_inventory_item_path(item), class: "btn btn-sm btn-outline-primary", title: "수정" do %>
                        <i class="bi bi-pencil"></i>
                      <% end %>
                      <%= link_to inventory_item_item_versions_path(item), class: "btn btn-sm btn-outline-info", title: "수정내역" do %>
                        <i class="bi bi-clock-history"></i>
                        <% if item.item_versions.any? %>
                          <span class="badge bg-info rounded-pill"><%= item.item_versions.count %></span>
                        <% end %>
                      <% end %>
                      <%= button_to inventory_item_path(item), method: :delete, data: { turbo_confirm: "정말 삭제하시겠습니까?" }, class: "btn btn-sm btn-outline-danger", title: "삭제" do %>
                        <i class="bi bi-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-inbox" style="font-size: 3rem; color: #d2d2d7;"></i>
          <p class="mt-3 text-muted">등록된 품목이 없습니다.</p>
          <%= link_to new_inventory_item_path, class: "btn-modern btn-modern-outline mt-2" do %>
            <i class="bi bi-plus-lg me-2"></i>품목 등록
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
