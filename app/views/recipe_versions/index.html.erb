<%= render 'recipes/shared/sub_navigation' %>

<div class="container mt-4">
  <!-- 헤더 섹션 -->
  <div class="mb-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "레시피 관리", recipes_path %></li>
        <li class="breadcrumb-item"><%= link_to @recipe.name, recipe_path(@recipe) %></li>
        <li class="breadcrumb-item active" aria-current="page">수정내역</li>
      </ol>
    </nav>
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h4 class="mb-0" style="font-weight: 600; letter-spacing: -0.02em;"><%= @recipe.name %> - 수정내역</h4>
        <p class="text-muted small mb-0">Recipe Version History</p>
      </div>
      <%= link_to recipes_path, class: "btn-modern btn-modern-outline" do %>
        <i class="bi bi-arrow-left me-2"></i>목록으로 돌아가기
      <% end %>
    </div>
  </div>

  <!-- 수정내역 목록 -->
  <div class="card-modern">
    <div class="card-body p-0">
      <% if @versions.any? %>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead style="background-color: #f5f5f7; border-bottom: 1px solid #d2d2d7;">
              <tr>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">버전</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">레시피명</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">총중량</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">수정일시</th>
                <th class="py-3 px-4" style="font-weight: 500; font-size: 0.875rem;">변경사항</th>
                <th class="py-3 px-4 text-center" style="font-weight: 500; font-size: 0.875rem;">삭제</th>
              </tr>
            </thead>
            <tbody>
              <!-- 현재 버전 표시 -->
              <tr style="background-color: #f0f9ff; border-bottom: 1px solid #e8e8ed;">
                <td class="py-3 px-4">
                  <span class="badge bg-primary">현재</span>
                </td>
                <td class="py-3 px-4" style="font-weight: 500;"><%= @recipe.name %></td>
                <td class="py-3 px-4"><%= number_with_delimiter(@recipe.total_weight) %> g</td>
                <td class="py-3 px-4"><%= @recipe.updated_at.strftime("%Y년 %m월 %d일 %H:%M") %></td>
                <td class="py-3 px-4 text-muted">-</td>
                <td class="py-3 px-4 text-center">-</td>
              </tr>

              <!-- 이전 버전들 -->
              <% @versions.each do |version| %>
                <tr style="border-bottom: 1px solid #e8e8ed;" class="version-row" data-version="<%= version.version_number %>">
                  <td class="py-3 px-4">
                    <span class="badge bg-secondary">v<%= version.version_number %></span>
                  </td>
                  <td class="py-3 px-4"><%= version.name %></td>
                  <td class="py-3 px-4"><%= number_with_delimiter(version.total_weight) %> g</td>
                  <td class="py-3 px-4"><%= version.changed_at.strftime("%Y년 %m월 %d일 %H:%M") %></td>
                  <td class="py-3 px-4">
                    <% if version.change_summary.present? %>
                      <span class="text-info"><i class="bi bi-info-circle me-1"></i><%= version.change_summary %></span>
                    <% else %>
                      <span class="text-muted">변경사항 없음</span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4 text-center">
                    <%= button_to recipe_recipe_version_path(@recipe, version),
                                  method: :delete,
                                  class: "btn btn-sm btn-outline-danger",
                                  data: { turbo_confirm: "이 수정내역을 삭제하시겠습니까?" },
                                  title: "삭제" do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </td>
                </tr>
                <!-- 상세 정보 (토글 가능) -->
                <tr class="version-detail" id="detail-<%= version.version_number %>" style="display: none; background-color: #fafafa;">
                  <td colspan="6" class="p-4">
                    <div class="row">
                      <!-- 재료 목록 -->
                      <div class="col-md-6 mb-3">
                        <h6 class="mb-2" style="font-weight: 600;"><i class="bi bi-egg me-2"></i>재료 목록</h6>
                        <div class="table-responsive">
                          <table class="table table-sm table-bordered">
                            <thead>
                              <tr>
                                <th>재료명</th>
                                <th class="text-end">중량(g)</th>
                                <th>주재료</th>
                                <th>비고</th>
                              </tr>
                            </thead>
                            <tbody>
                              <%
                                # 다음 버전 (비교 대상) 찾기
                                # @versions는 내림차순이므로 index - 1이 다음(더 최신) 버전
                                next_version_index = @versions.index(version) - 1
                                next_version = next_version_index >= 0 ? @versions[next_version_index] : nil
                                # 첫 번째 버전(가장 최신)이면 현재 레시피와 비교
                                is_first_version = version == @versions.first

                                # 비교 데이터 준비 (재료 이름을 키로 사용)
                                comparison_data = {}
                                if is_first_version
                                  # 가장 최신 버전 - 현재 레시피와 비교
                                  @recipe.recipe_ingredients.each do |ri|
                                    next if ri.row_type == 'subtotal'
                                    key = ri.display_name
                                    comparison_data[key] = {
                                      'display_name' => ri.display_name,
                                      'weight' => ri.weight.to_f,
                                      'is_main' => ri.is_main,
                                      'row_type' => ri.row_type,
                                      'notes' => ri.notes
                                    }
                                  end
                                elsif next_version
                                  # 다음 버전과 비교
                                  next_version.ingredients_data.each do |ing|
                                    next if ing['row_type'] == 'subtotal'
                                    ing_name = ing['display_name'] || ing['item_name'] || ing['referenced_ingredient_name']
                                    key = ing_name
                                    comparison_data[key] = ing
                                  end
                                end
                              %>

                              <% version.ingredients_data.each do |ing| %>
                                <%
                                  is_subtotal = ing['row_type'] == 'subtotal'
                                  ing_name = ing['display_name'] || ing['item_name'] || ing['referenced_ingredient_name']

                                  # 비교 정보 (재료 이름으로 찾기)
                                  unless is_subtotal
                                    key = ing_name
                                    compared = comparison_data[key]
                                    # 타입을 Float로 통일해서 비교
                                    current_weight = ing['weight'].to_f
                                    current_notes = ing['notes']
                                    compared_weight = compared ? compared['weight'].to_f : nil
                                    compared_notes = compared ? compared['notes'] : nil
                                    weight_changed = compared && (current_weight != compared_weight)
                                    notes_changed = compared && (current_notes.to_s != compared_notes.to_s)

                                    # 재료가 이후에 삭제되는지 확인
                                    will_be_deleted = compared.nil?
                                  else
                                    weight_changed = false
                                    notes_changed = false
                                    will_be_deleted = false
                                  end
                                %>

                                <% if is_subtotal %>
                                  <!-- 소계 행 -->
                                  <tr style="background-color: #f0f9ff; font-weight: 600;">
                                    <td>
                                      <i class="bi bi-calculator me-2"></i>소계
                                    </td>
                                    <td class="text-end"><%= number_with_delimiter(ing['weight']) %> g</td>
                                    <td></td>
                                    <td></td>
                                  </tr>
                                <% else %>
                                  <!-- 일반 재료 행 -->
                                  <tr <%= 'style="background-color: #f8d7da;"'.html_safe if will_be_deleted %>
                                      <%= 'style="background-color: #fff3cd;"'.html_safe if weight_changed && !will_be_deleted %>>
                                    <td <%= 'style="text-decoration: line-through; opacity: 0.7;"'.html_safe if will_be_deleted %>>
                                      <%= ing_name %>
                                      <% if will_be_deleted %>
                                        <br>
                                        <small class="text-danger">
                                          <i class="bi bi-dash-circle me-1"></i>이후에 삭제됨
                                        </small>
                                      <% elsif weight_changed %>
                                        <br>
                                        <small class="text-warning">
                                          <i class="bi bi-arrow-right me-1"></i>
                                          <%= number_with_delimiter(current_weight) %>g → <%= number_with_delimiter(compared_weight) %>g
                                        </small>
                                      <% end %>
                                    </td>
                                    <td class="text-end"><%= number_with_delimiter(current_weight) %></td>
                                    <td>
                                      <% if ing['is_main'] %>
                                        <i class="bi bi-check-circle-fill text-primary"></i>
                                      <% end %>
                                    </td>
                                    <td <%= 'style="background-color: #fff3cd;"'.html_safe if notes_changed && !will_be_deleted %>>
                                      <% if ing['notes'].present? %>
                                        <%= ing['notes'] %>
                                      <% else %>
                                        <span class="text-muted">-</span>
                                      <% end %>
                                      <% if notes_changed %>
                                        <br>
                                        <small class="text-warning">
                                          <i class="bi bi-arrow-right me-1"></i>
                                          <%= current_notes || '-' %> → <%= compared_notes || '-' %>
                                        </small>
                                      <% end %>
                                    </td>
                                  </tr>
                                <% end %>
                              <% end %>

                              <%
                                # 이후에 추가된 재료 표시
                                if is_first_version || next_version
                                  added_ingredient_keys = comparison_data.keys - version.ingredients_data.reject { |ing| ing['row_type'] == 'subtotal' }.map { |ing|
                                    ing['display_name'] || ing['item_name'] || ing['referenced_ingredient_name']
                                  }

                                  added_ingredient_keys.each do |added_key|
                                    added_ing = comparison_data[added_key]
                              %>
                                    <tr style="background-color: #d1ecf1;">
                                      <td>
                                        <%= added_ing['display_name'] %>
                                        <br>
                                        <small class="text-info">
                                          <i class="bi bi-plus-circle me-1"></i>이후에 추가됨
                                        </small>
                                      </td>
                                      <td class="text-end"><%= number_with_delimiter(added_ing['weight']) %></td>
                                      <td>
                                        <% if added_ing['is_main'] %>
                                          <i class="bi bi-check-circle-fill text-info"></i>
                                        <% end %>
                                      </td>
                                      <td>
                                        <% if added_ing['notes'].present? %>
                                          <%= added_ing['notes'] %>
                                        <% else %>
                                          <span class="text-muted">-</span>
                                        <% end %>
                                      </td>
                                    </tr>
                              <%
                                  end
                                end
                              %>
                            </tbody>
                          </table>
                        </div>
                      </div>

                      <!-- 장비 목록 -->
                      <div class="col-md-6 mb-3">
                        <h6 class="mb-2" style="font-weight: 600;"><i class="bi bi-gear me-2"></i>사용 장비</h6>
                        <div class="table-responsive">
                          <table class="table table-sm table-bordered">
                            <thead>
                              <tr>
                                <th>장비명/공정명</th>
                                <th>작업용량</th>
                              </tr>
                            </thead>
                            <tbody>
                              <%
                                # 장비 비교 데이터 준비
                                equipment_comparison_data = {}
                                if is_first_version
                                  # 현재 레시피와 비교
                                  @recipe.recipe_equipments.each do |re|
                                    key = if re.row_type == 'process'
                                      "process_#{re.recipe_process&.name}"
                                    else
                                      "equipment_#{re.equipment&.name}"
                                    end
                                    equipment_comparison_data[key] = {
                                      'equipment_name' => re.equipment&.name,
                                      'process_name' => re.recipe_process&.name,
                                      'work_capacity' => re.work_capacity.to_f,
                                      'work_capacity_unit' => re.work_capacity_unit,
                                      'row_type' => re.row_type
                                    }
                                  end
                                elsif next_version
                                  # 다음 버전과 비교
                                  next_version.equipments_data.each do |eq|
                                    key = if eq['row_type'] == 'process'
                                      "process_#{eq['process_name']}"
                                    else
                                      "equipment_#{eq['equipment_name']}"
                                    end
                                    equipment_comparison_data[key] = eq
                                  end
                                end
                              %>

                              <% version.equipments_data.each do |equip| %>
                                <%
                                  # 비교 키 생성
                                  equip_key = if equip['row_type'] == 'process'
                                    "process_#{equip['process_name']}"
                                  else
                                    "equipment_#{equip['equipment_name']}"
                                  end

                                  compared_equip = equipment_comparison_data[equip_key]

                                  # 작업용량 비교
                                  current_capacity = equip['work_capacity'].to_f
                                  compared_capacity = compared_equip ? compared_equip['work_capacity'].to_f : nil
                                  capacity_changed = compared_equip && (current_capacity != compared_capacity)

                                  # 장비가 이후에 삭제되는지 확인
                                  will_be_deleted = compared_equip.nil?
                                %>

                                <tr <%= 'style="background-color: #f8d7da;"'.html_safe if will_be_deleted %>
                                    <%= 'style="background-color: #fff3cd;"'.html_safe if capacity_changed && !will_be_deleted %>>
                                  <td <%= 'style="text-decoration: line-through; opacity: 0.7;"'.html_safe if will_be_deleted %>>
                                    <% if equip['row_type'] == 'process' %>
                                      <i class="bi bi-folder-fill text-primary me-2"></i><%= equip['process_name'] %>
                                    <% else %>
                                      <i class="bi bi-gear me-2"></i><%= equip['equipment_name'] %>
                                    <% end %>
                                    <% if will_be_deleted %>
                                      <br>
                                      <small class="text-danger">
                                        <i class="bi bi-dash-circle me-1"></i>이후에 삭제됨
                                      </small>
                                    <% end %>
                                  </td>
                                  <td>
                                    <% if equip['work_capacity'].present? %>
                                      <%= number_with_delimiter(equip['work_capacity']) %> <%= equip['work_capacity_unit'] %>
                                      <% if capacity_changed %>
                                        <br>
                                        <small class="text-warning">
                                          <i class="bi bi-arrow-right me-1"></i>
                                          <%= number_with_delimiter(current_capacity) %> → <%= number_with_delimiter(compared_capacity) %>
                                        </small>
                                      <% end %>
                                    <% else %>
                                      -
                                    <% end %>
                                  </td>
                                </tr>
                              <% end %>

                              <%
                                # 이후에 추가된 장비 표시
                                if is_first_version || next_version
                                  added_equipment_keys = equipment_comparison_data.keys - version.equipments_data.map { |eq|
                                    if eq['row_type'] == 'process'
                                      "process_#{eq['process_name']}"
                                    else
                                      "equipment_#{eq['equipment_name']}"
                                    end
                                  }
                                else
                                  added_equipment_keys = []
                                end

                                added_equipment_keys.each do |added_key|
                                  added_equip = equipment_comparison_data[added_key]
                              %>
                                <tr style="background-color: #d1ecf1;">
                                  <td>
                                    <% if added_equip['row_type'] == 'process' %>
                                      <i class="bi bi-folder-fill text-info me-2"></i><%= added_equip['process_name'] %>
                                    <% else %>
                                      <i class="bi bi-gear text-info me-2"></i><%= added_equip['equipment_name'] %>
                                    <% end %>
                                    <br>
                                    <small class="text-info">
                                      <i class="bi bi-plus-circle me-1"></i>이후에 추가됨
                                    </small>
                                  </td>
                                  <td>
                                    <% if added_equip['work_capacity'].present? %>
                                      <%= number_with_delimiter(added_equip['work_capacity']) %> <%= added_equip['work_capacity_unit'] %>
                                    <% else %>
                                      -
                                    <% end %>
                                  </td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                        </div>
                      </div>

                      <!-- 설명 및 비고 -->
                      <div class="col-12">
                        <% if version.description.present? || version.notes.present? %>
                          <h6 class="mb-2" style="font-weight: 600;"><i class="bi bi-file-text me-2"></i>추가 정보</h6>
                          <% if version.description.present? %>
                            <p class="mb-2"><strong>설명:</strong> <%= simple_format(version.description) %></p>
                          <% end %>
                          <% if version.notes.present? %>
                            <p class="mb-0"><strong>비고:</strong> <%= simple_format(version.notes) %></p>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-clock-history" style="font-size: 3rem; color: #d2d2d7;"></i>
          <p class="mt-3 text-muted">아직 수정 내역이 없습니다.</p>
          <p class="text-muted small">레시피를 수정하면 자동으로 변경 내역이 기록됩니다.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .version-row {
    cursor: pointer;
    transition: background-color 0.2s;
  }
  .version-row:hover {
    background-color: #f5f5f7;
  }
</style>

<script>
function initializeVersionToggle() {
  const versionRows = document.querySelectorAll('.version-row');

  versionRows.forEach(row => {
    // 기존 이벤트 리스너 제거 (중복 방지)
    const oldListener = row._versionClickListener;
    if (oldListener) {
      row.removeEventListener('click', oldListener);
    }

    // 새 이벤트 리스너 생성 및 저장
    const newListener = function(e) {
      // 삭제 버튼 클릭 시에는 토글하지 않음
      if (e.target.closest('form') || e.target.closest('button')) {
        return;
      }

      const version = this.dataset.version;
      const detailRow = document.getElementById('detail-' + version);

      if (!detailRow) {
        console.error('Detail row not found for version:', version);
        return;
      }

      // display 값이 없거나 'none'이면 보이기, 아니면 숨기기
      if (detailRow.style.display === '' || detailRow.style.display === 'none') {
        detailRow.style.display = 'table-row';
      } else {
        detailRow.style.display = 'none';
      }
    };

    row._versionClickListener = newListener;
    row.addEventListener('click', newListener);
  });
}

// 초기 페이지 로드 시
document.addEventListener('DOMContentLoaded', initializeVersionToggle);

// Turbo를 통한 페이지 로드 시
document.addEventListener('turbo:load', initializeVersionToggle);

// Turbo 렌더링 완료 시
document.addEventListener('turbo:render', initializeVersionToggle);
</script>
