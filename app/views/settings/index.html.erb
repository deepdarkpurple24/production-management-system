<div class="container mt-4">
  <!-- 헤더 섹션 -->
  <div class="mb-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "홈", root_path %></li>
        <li class="breadcrumb-item active" aria-current="page">설정</li>
      </ol>
    </nav>
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h4 class="mb-0" style="font-weight: 600; letter-spacing: -0.02em;">설정</h4>
        <p class="text-muted small mb-0">Settings</p>
      </div>
    </div>
  </div>

  <!-- 설정 메뉴 카드 -->
  <div class="row g-4">
    <!-- 시스템 설정 -->
    <div class="col-md-6 col-lg-4">
      <%= link_to settings_system_path, class: "text-decoration-none" do %>
        <div class="card-modern h-100" style="transition: all 0.2s ease; cursor: pointer;">
          <div class="card-body p-4 text-center">
            <div class="mb-3">
              <i class="bi bi-gear-fill" style="font-size: 3rem; color: #0071e3;"></i>
            </div>
            <h5 class="card-title mb-2" style="font-weight: 600; color: #1d1d1f;">시스템 설정</h5>
            <p class="card-text text-muted small mb-0">
              기기관리 및 재고관리 기본 설정
            </p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- 추가 설정 메뉴는 여기에 추가할 수 있습니다 -->
    <!-- 예시: 사용자 설정, 권한 설정 등 -->
  </div>

  <!-- 하단 버튼 -->
  <div class="mt-4 pt-3 border-top">
    <%= link_to root_path, class: "btn-modern btn-modern-outline" do %>
      <i class="bi bi-arrow-left me-2"></i>홈으로
    <% end %>
  </div>
</div>

<style>
  .card-modern:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }
</style>
