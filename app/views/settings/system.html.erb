    // URL 파라미터에서 탭 정보 읽기 및 활성화
    const urlParams = new URLSearchParams(window.location.search);
    const activeTab = urlParams.get('tab');

    if (activeTab) {
      // 해당하는 탭 버튼 찾기
      const tabButton = document.getElementById(activeTab + '-tab');
